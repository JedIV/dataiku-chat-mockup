{
  "manifest_version": 3,
  "name": "Dataiku Chat Mockup",
  "version": "1.0.0",
  "description": "Injects a mock AI chat assistant into Dataiku's right panel for demos",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.dataiku.com/*", "*://localhost/*", "*://127.0.0.1/*"],
  "action": {
    "default_title": "Inject Chat Mockup",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
